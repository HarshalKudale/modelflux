{
    "manifest_version": 2,
    "name": "ModelFlux CORS Helper",
    "description": "Enables ModelFlux web app to communicate with local LLM services",
    "version": "1.0.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "cors-helper@modelflux.io",
            "strict_min_version": "109.0"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://localhost/*",
        "*://127.0.0.1/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://modelflux.io/*",
                "*://*.modelflux.io/*",
                "*://localhost/*",
                "*://localhost:*/*",
                "*://127.0.0.1/*",
                "*://127.0.0.1:*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}